{{> molecules-navigation }}
<main class="appmain">

	<article class="working_group">

		<header class="page__header">
		  <div class="heading--header">Working Group</div>
		  <h1 class="heading--title">Quality of Life</h1>
			<p>This is the working group dedicated to looking out for the general wellbeing of our citizens.</p>
		</header>

		<div class="page__contents">

			<section class="panel activity-and-members">
				<section class="latest-activity">
					<div class="panel-heading panel-heading-relative">
						<h1 class="heading--header">Latest Activity</h1><p class="heading--small"><a href="{{ link.templates-all-proposals-view }}">See All</a></p>
					</div>
					{{# listItems.ten }}
					{{> atoms-activity-stream-list-item }}
					{{/ listItems.ten }}
				</section>
				<section>
					<div class="panel-heading">
						<h1 class="heading--header">Members</h1><p class="heading--small"><a href="{{ link.templates-all-proposals-view }}">See All</a> | <a href="#">Add New</a></p>
					</div>
					{{# listItems.nine }}
					{{> molecules-user-card }}
					{{/ listItems.nine }}
				</section>
			</section>
		  <section class="panel ideas-and-proposals">
		        <section class="list--proposal">
		            <div class="panel-heading-no-margin">
		                <h1 class="heading--header">Proposals</h1>
		                <p class="heading--small">
		                    <a href="{{ link.templates-all-proposals-view }}"><i class="fa fa-arrows-alt"></i>&nbsp;See All&nbsp;&nbsp;</a>
		                    <a href="#"><i class="fa fa-plus-square"></i>&nbsp;Add New</a>
		                </p>
		            </div>
		          {{# listItems.four }}
		            {{> molecules-card-proposal }}
		          {{/ listItems.four }}
		        </section>
		        <section class="list--idea">
		            <div class="panel-heading-no-margin">
		                <h1 class="heading--header">Ideas</h1>
		                <p class="heading--small">
		                    <a href="{{ link.templates-all-ideas-view }}"><i class="fa fa-arrows-alt"></i>&nbsp;See All&nbsp;&nbsp;</a>
		                    <a href="#"><i class="fa fa-plus-square"></i>&nbsp;Add New</a>
		                </p>
		            </div>
		          {{# listItems.seven }}
		            {{> molecules-card-idea }}
		          {{/ listItems.seven }}
		        </section>
		    </section>

				{{> organisms-comment-section}}

		<div>

	</article>
</main>
{{> organisms-footer }}
