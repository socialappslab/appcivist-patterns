<div class="card__proposal">
  <div class="card__wrapper">
    <header class="card__header">
      <div class="heading--categories">
        {{> molecules-tags-proposal-card}}
      </div>
      <div class="title_block">
        <h1 class="heading--headline">
          <a href="{{link.templates-single-proposal}}">{{ title.short }}</a>
        </h1>
        <div class="card__heading_actions">
          <ul class="actions">
            <li class="action__toggle_selection"><a href="#">{{> atoms-icon-selection-toggle }}</a></li>
            <li class="action__contextual_menu"><a href="#">{{> atoms-icon-cog }}</a></li>
          </ul>
          <div class="contextual_menu">
            <div class="content">
              <ul>
                <li class="action__edit"><a href="#">Edit</a></li>
                <li class="action__publish"><a href="#">Publish</a></li>
                <li class="action__feedback"><a href="#">Give Feedback</a></li>
                <li class="action__exclude"><a href="#">Exclude</a></li>
                <li class="action__history"><a href="#">See history</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="heading__working_group">
        <i class="fa fa-group"></i> <a href="{{ link.templates-working-group-dashboard }}">{{ group.name }}</a>
      </div>
    </header>
    <div class="card__body">
      <div class="excerpt">
        {{ excerpt.short }}
      </div>

      <div class="voting_mechanism">
        {{# voting_mechanism.consensus}}
          {{> molecules-consensus}}
        {{/ voting_mechanism.consensus}}

        {{# voting_mechanism.temperature_check}}
          {{> molecules-temperature-check}}
        {{/voting_mechanism.temperature_check}}
      </div>
    </div>
  </div>
</div>
